<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".NewActivity">


    <Button
        android:id="@+id/defectNextBtn"
        android:layout_width="167dp"
        android:layout_height="61dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/h1"
        android:textSize="30sp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyNoBtn"
        app:layout_constraintVertical_bias="0.795" />

    <Button
        android:id="@+id/historyNoBtn"
        android:layout_width="322dp"
        android:layout_height="61dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/poppins_extrabold"
        android:text="NO"
        android:textAllCaps="false"
        android:textColor="@color/h1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyYesBtn" />

    <Button
        android:id="@+id/historyYesBtn"
        android:layout_width="322dp"
        android:layout_height="61dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/poppins_extrabold"
        android:text="YES"
        android:textAllCaps="false"
        android:textColor="@color/h1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defectTextView" />

    <TextView
        android:id="@+id/defectTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="any eye defect?"
        android:textAlignment="center"
        android:textColor="@color/h1"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defectBackBtn" />

    <ImageView
        android:id="@+id/defectBackBtn"
        android:layout_width="70dp"
        android:layout_height="26dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>